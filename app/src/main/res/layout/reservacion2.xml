<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">



    <TextView
        android:id="@+id/ProductName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="MIPRODUCTO"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#ff0d07ef"

        android:gravity="center"/>

    <ListView
        android:id="@+id/sublista"
        android:layout_width="match_parent"
        android:layout_height="254dp" >
    </ListView>

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:onClick="irmenu"
        android:text="Agregar mÃ¡s Productos"
        android:layout_below="@+id/sublista"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="61dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Terminar Compra"
        android:onClick="terminarcompra"
        android:layout_below="@+id/button1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="58dp" />

</LinearLayout>